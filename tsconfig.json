{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@tschain-sepp/components/*": ["components/*"],
      "@tschain-sepp/idl/*": ["target/idl/*"],
      "@tschain-sepp/types/*": ["target/types/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es6",
    "plugins": [{ "name": "next" }],
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha", "chai"]
  },
  "exclude": [
    "migrations",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
